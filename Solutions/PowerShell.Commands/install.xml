<?xml version="1.0" encoding="utf-8"?>
<Deployment
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="install.xsd">
  <CollectUlsOnError Enabled="true" />
  <Logging Enabled="true" />
  <DeploymentSteps>
    <SetVariables>
      <!--
      <Prompt Title="Variables" Message="Enter Environment Variables">
        <Param Name="SP Url"/>
      </Prompt>
      -->
      <Variable VariableName="SP Url">https://bluemetal.sharepoint.com/sites/clientsandprojects</Variable>
      <Variable VariableName="New Web Url">${SP Url}/wbmason/testproject</Variable>
      <Credential VariableName="Login" UserName="markc@bluemetal.onmicrosoft.com" Password="b@rr1cade" />
      <!--<Credential VariableName="Login" UserName="markc@bluemetal.onmicrosoft.com" Password="Xoyu1666" />-->
    </SetVariables>
    <Connect Url="${SP Url}" Credentials="${Login}" />
	
	<!--
    <DeleteWeb Url="${New Web Url}" />
    <CreateWeb Title="Test" Url="${New Web Url}" Description="" Template="STS#0" />
    <ApplyWebTemplate Url="${New Web Url}" TemplatePath="testTemplate.xml" />
	-->
	
	<AddWebPart WebUrl="${New Web Url}" PageUrl="SitePages/Home.aspx" ZoneID="Header" ZoneIndex="0">
		<webParts>
		  <webPart xmlns="http://schemas.microsoft.com/WebPart/v3">
			<metaData>
			  <type name="Microsoft.SharePoint.WebPartPages.BlogAdminWebPart, Microsoft.SharePoint, Version=16.0.0.0, Culture=neutral, PublicKeyToken=71e9bce111e9429c" />
			  <importErrorMessage>Cannot import this Web Part.</importErrorMessage>
			</metaData>
			<data>
			  <properties>
				<property name="AllowZoneChange" type="bool">True</property>
				<property name="HelpUrl" type="string" />
				<property name="Hidden" type="bool">False</property>
				<property name="MissingAssembly" type="string">Cannot import this Web Part.</property>
				<property name="CategoryUrl" type="string">Lists/Categories/Category.aspx?CategoryId={CategoryId}</property>
				<property name="Description" type="string">Provides blog owners and administrators with quick links to common settings pages and content lists for managing a blog site.</property>
				<property name="PostUrl" type="string">Lists/Posts/Post.aspx?ID={ID}</property>
				<property name="AllowHide" type="bool">True</property>
				<property name="AllowMinimize" type="bool">True</property>
				<property name="Title" type="string">Blog Tools</property>
				<property name="TitleUrl" type="string" />
				<property name="ExportMode" type="exportmode">All</property>
				<property name="ChromeType" type="chrometype">Default</property>
				<property name="AllowConnect" type="bool">True</property>
				<property name="Width" type="string" />
				<property name="Height" type="string" />
				<property name="CatalogIconImageUrl" type="string" />
				<property name="HelpMode" type="helpmode">Modeless</property>
				<property name="AllowEdit" type="bool">True</property>
				<property name="TitleIconImageUrl" type="string" />
				<property name="Direction" type="direction">NotSet</property>
				<property name="AllowClose" type="bool">True</property>
				<property name="ChromeState" type="chromestate">Normal</property>
			  </properties>
			</data>
		  </webPart>
		</webParts>
	</AddWebPart>
  </DeploymentSteps>
</Deployment>