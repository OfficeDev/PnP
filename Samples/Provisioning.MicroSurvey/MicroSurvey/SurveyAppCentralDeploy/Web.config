<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- Specify Windows authentication but allow anonymous access to OPTIONS so CORS preflight will work -->
    <!-- (see https://fetch.spec.whatwg.org/#http-responses) -->
    <authentication mode="Windows" />
    <authorization>
      <allow verbs="OPTIONS" users="*"/>
      <deny users="?" />
    </authorization>
  </system.web>
  <system.webServer>
    <staticContent>
      <!-- Allow a short cache in production; for dev disable it completely -->
      <clientCache cacheControlMode="DisableCache"/>
    </staticContent>
    <httpProtocol>
      <customHeaders>
        <!-- Provide CORS header for cross-domain access to ng-include and directive templates -->
        <add name="Access-Control-Allow-Origin" value="*" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>